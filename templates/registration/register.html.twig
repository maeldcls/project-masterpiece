{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
<div class="w-full h-screen bg-no-repeat bg-cover z-0" style="background-image: url('{{ game.image }}')">
    <div class="w-full h-full flex flex-col justify-center items-center bg-zinc-950 bg-opacity-80 z-50">
        <div class=" flex flex-col justify-center w-2/3 items-center pb-10">
            <p class="text-4xl ">"{{ game.quote}}" --{{ game.author }}, {{ game.game}} </p>
        </div>
        <div class="w-full flex justify-center items-center bg-transparent">
            {{ form_errors(registrationForm) }}
            {{ form_start(registrationForm,{'attr': {'class': 'flex flex-col bg-blue-950 w-96 h-64 opacity-90 rounded border-2 border-slate-900'}} ) }}
            {{ form_row(registrationForm.username) }}
                {{ form_row(registrationForm.email) }}
                
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="btn">Register</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
    
{% endblock %}
