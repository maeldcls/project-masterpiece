{% extends 'base.html.twig' %}

{% block title %}Hello GameDetailsController!
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/GameDetail.css') }}">
{% endblock %}
{% block body %}
	<div class="w-full content">


		<div class="w-full flex flex-col mt-72 screenContainer">
			<h2 class="title">{{ game.title }}</h2>
            <div class=" w-full flex flex-wrap">
			    {% for screenshot in game.screenshots %}
                    <div class="p-2">
                        <img class="screen" src="{{ screenshot }}" alt="screen" onclick="showModal('{{ screenshot }}')"/>
                    </div>
			    {% endfor %}
            </div>
			<p id="summaryPreview">{{ game.summary|slice(0, 200) }}{{ game.summary|length > 100 ? '...' : '' }}</p>
            <p id="summaryFull" class="hidden">{{ game.summary}}</p>
            <p id="readMore">Read More</p>
            <p id="hide" class="hidden">Hide</p>
			<a href="{{ path('app_add_game', {'id': game.gameId}) }}">
				<p>ADD</p>
			</a>
		</div>

		<div id="modal" class="hidden">
			<img id="modal-img" class="object-cover"/>
		</div>
	</div>
	<style>
		.content {
			background-image: url({{ game.backgroundImage }});
			background-size: contain;
			background-repeat: no-repeat;
            width: 100%;
		}
	</style>


{% endblock %}
{% block javascripts %}

	<script src="{{ asset ('js/gameDetails.js') }}"></script>
{% endblock %}
