<div class="w-full h-30 flex flex-col h-28 searchBar">
    <div class="flex justify-between w-full">
        <div class="flex flex-col justify-center w-full lg:w-2/3 items-center">
            <div class="w-2/3 flex justify-between">
                <div>
                    <img class="h-10"src="{{ asset('assets/other/portail1.png') }}" alt="portail1" />
                </div>
                <div class="w-full flex-grow flex justify-start">
                    <div class="zombie">
                        <img class="h-10"src="{{ asset('assets/other/zombie.gif') }}" alt="zombie"/>
                    </div>
                </div>
                <div class="justify-end">
                    <img class="h-10 mr-16"src="{{ asset('assets/other/portail2.png') }}" alt="portail2"/>
                </div>
            </div>
            {{ form_start(formSearch, {'attr': {'class': 'flex  w-2/3 text-white' }})}}
            {{ form_widget(formSearch.searchText , {'attr': {'class': 'outline-none bg-gray-800 w-full text-white rounded-l-full pl-5','placeholder': 'Search ...'}})}}
            {{ form_end(formSearch)}}
        </div>
        <div class="flex w-1/3 justify-end items-end pt-3 mr-16 logContainer">
            {% if app.user %}
                <a href="{{ path('app_game_user_index') }}"><p>My Game List</p></a>
                <a href="{{ path('app_logout') }}" class="ml-5"><p> Log Out</p></a>
            {% else %}
                <a href="{{ path('app_login') }}"><p> Log In</p></a>
                <a href="{{ path('app_register') }}" class="ml-5"><p>Sign up</p></a>
            {% endif %}
           
        </div>
        <div>
         <div id="openNavResponsive"class="block absolute right-10 top-10 lg:hidden cursor-pointer z-50">
